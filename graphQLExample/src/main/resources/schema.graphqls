type Query {
	helloWorld:String!
	greeting(firstName:String!, lastName:String): String!
	books:[Book]
	bookById(id:Int):Book
}

# Book type

type Book {
 id:Int,
 title:String!,
 totalPages:Int,
 rating:Float,
 isbn:String,
 publisher:Publisher # book is published by a publisher
}

# Publisher Type

type Publisher {
 id:Int!,
 name:String!
}